<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.microarray</groupId>
    <artifactId>arrayexpress-interface</artifactId>
    <name>ArrayExpress Interface Web Application</name>
    <version>1.1</version>
    <packaging>war</packaging>

    <parent>
        <artifactId>arrayexpress</artifactId>
        <groupId>uk.ac.ebi.microarray</groupId>
        <version>7.5-SNAPSHOT</version>
    </parent>

    <!-- default values for repository related properties -->
    <properties>
        <interface.application.log.default.priority>INFO</interface.application.log.default.priority>
        <interface.application.log.appender.ref>ROLLINGFILE</interface.application.log.appender.ref>

        <interface.application.base.url>/microarray-as/ae</interface.application.base.url>
        <interface.application.link.www_domain></interface.application.link.www_domain>
        <interface.application.link.browse_help>${interface.application.link.www_domain}/microarray/doc/help/browse_results.html</interface.application.link.browse_help>
        <interface.application.link.aer_old.base.url>/microarray-as/aer</interface.application.link.aer_old.base.url>
        <interface.application.link.aew.base.url>/microarray-as/aew</interface.application.link.aew.base.url>
        <interface.application.link.atlas.exp_query.url>/microarray-as/atlas/qr?view=table&amp;amp;q_expt=aer_txt_expaccession%3A</interface.application.link.atlas.exp_query.url>
        <interface.application.link.aer_old.experiment_link.style></interface.application.link.aer_old.experiment_link.style>
        <interface.application.link.solr_gene_stats.url>/microarray-as/solr_gene/admin/stats.jsp</interface.application.link.solr_gene_stats.url>
        <interface.application.link.solr_exp_stats.url>/microarray-as/solr_exp/admin/stats.jsp</interface.application.link.solr_exp_stats.url>

        <interface.application.link.news_xml.url>/microarray-srv/ae/ae-main-news.xml</interface.application.link.news_xml.url>
        <interface.application.link.links_xml.url>/microarray-srv/ae/ae-main-links.xml</interface.application.link.links_xml.url>

        <interface.application.pref.experiments.datasources>aepub3,aepub2</interface.application.pref.experiments.datasources>
        <interface.application.pref.experiments.reload.schedule>0 0 6 * * ?</interface.application.pref.experiments.reload.schedule>
        <interface.application.pref.ftp.root.location>/ebi/ArrayExpress-ftp</interface.application.pref.ftp.root.location>
        <interface.application.pref.files.rescan.interval>3600000</interface.application.pref.files.rescan.interval>
        <interface.application.google.analytics></interface.application.google.analytics>
    </properties>
    <profiles>
        <profile>
            <id>debug</id>
            <properties>
                <interface.application.log.default.priority>ALL</interface.application.log.default.priority>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <interface.application.google.analytics>
<![CDATA[
<script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
    var pageTracker = _gat._getTracker("UA-338477-3");
    pageTracker._initData();
    pageTracker._trackPageview();
</script>
]]>
                </interface.application.google.analytics>
            </properties>
        </profile>
        <profile>
            <id>curators</id>
            <properties>
                <interface.application.base.url>/ae11</interface.application.base.url>

                <interface.application.link.www_domain>http://www.ebi.ac.uk</interface.application.link.www_domain>
                <interface.application.link.browse_help>${interface.application.link.www_domain}/microarray/doc/help/browse_results.html</interface.application.link.browse_help>
                <interface.application.link.aer_old.base.url>/arrayexpress</interface.application.link.aer_old.base.url>
                <interface.application.link.atlas.exp_query.url>${interface.application.link.www_domain}/microarray-as/atlas/qr?view=table&amp;amp;q_expt=aer_txt_expaccession%3A</interface.application.link.atlas.exp_query.url>
                <interface.application.link.aer_old.experiment_link.style></interface.application.link.aer_old.experiment_link.style>
                <interface.application.link.aew.base.url>/arrayexpress-aew</interface.application.link.aew.base.url>

                <interface.application.link.solr_gene_stats.url>/solr_gene/admin/stats.jsp</interface.application.link.solr_gene_stats.url>
                <interface.application.link.solr_exp_stats.url>/solr_exp/admin/stats.jsp</interface.application.link.solr_exp_stats.url>
                <interface.application.link.news_xml.url>test/ae_news.xml</interface.application.link.news_xml.url>
                <interface.application.link.links_xml.url>test/ae_links.xml</interface.application.link.links_xml.url>

                <interface.application.pref.experiments.datasources>aepub1</interface.application.pref.experiments.datasources>
                <interface.application.pref.experiments.reload.schedule>0 0 0/1 * * ?</interface.application.pref.experiments.reload.schedule>

                <interface.application.pref.files.rescan.interval>900000</interface.application.pref.files.rescan.interval>
            </properties>
        </profile>
        <profile>
            <id>local</id>
            <properties>
                <interface.application.log.appender.ref>CONSOLE</interface.application.log.appender.ref>
            </properties>
        </profile>
    </profiles>

    <distributionManagement>
        <site>
            <id>arrayexpress</id>
            <url>scpexe://dukkha/ebi/microarray/home/maven-site/${pom.parent.artifactId}/${pom.artifactId}</url>
        </site>
    </distributionManagement>

    <developers>
        <developer>
            <id>kolais</id>
            <name>Nikolay Kolesnikov</name>
            <email>kolais@ebi.ac.uk</email>
            <roles>
                <role>Software Engineer</role>
            </roles>
        </developer>
        <developer>
            <id>ugis</id>
            <name>Ugis Sarkans</name>
            <email>ugis@ebi.ac.uk</email>
            <roles>
                <role>Team Leader</role>
            </roles>
        </developer>
    </developers>
    <build>
        <resources>
            <resource>
                <directory>resources</directory>
                <excludes>
                    <exclude>assets/**</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <finalName>${pom.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>${basedir}/src/main/webapp</directory>
                            <includes>
                                <include>*.html</include>
                                <include>assets/scripts/ae_*.js</include>
                                <include>WEB-INF/web.xml</include>
                                <include>WEB-INF/urlrewrite.xml</include>
                                <include>WEB-INF/server-assets/stylesheets/*.xsl</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.tuckey</groupId>
            <artifactId>urlrewritefilter</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>quartz</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.transaction</groupId>
            <artifactId>transaction-api</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
        </dependency>
    </dependencies>
</project>

