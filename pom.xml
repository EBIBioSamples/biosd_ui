<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.microarray</groupId>
    <artifactId>arrayexpress-interface</artifactId>
    <name>ArrayExpress Interface Web Application</name>
    <version>1.5-SNAPSHOT</version>
    <packaging>war</packaging>

    <parent>
        <artifactId>arrayexpress</artifactId>
        <groupId>uk.ac.ebi.microarray</groupId>
        <version>7.5-SNAPSHOT</version>
    </parent>

    <!-- default values for repository related properties -->
    <properties>
        <interface.application.log.default.priority>INFO</interface.application.log.default.priority>
        <interface.application.log.appender.ref>ROLLINGFILEPROD</interface.application.log.appender.ref>
    </properties>
    <profiles>
        <profile>
            <id>development</id>
            <properties>
                <interface.application.log.default.priority>ALL</interface.application.log.default.priority>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>curators</id>
            <properties>
                <interface.application.log.appender.ref>ROLLINGFILECUR</interface.application.log.appender.ref>
            </properties>
        </profile>
        <profile>
            <id>local</id>
            <properties>
                <interface.application.log.appender.ref>CONSOLE</interface.application.log.appender.ref>
            </properties>
        </profile>
    </profiles>

    <distributionManagement>
        <site>
            <id>arrayexpress</id>
            <url>scpexe://dukkha/ebi/microarray/home/maven-site/${pom.parent.artifactId}/${pom.artifactId}</url>
        </site>
    </distributionManagement>

    <developers>
        <developer>
            <id>kolais</id>
            <name>Nikolay Kolesnikov</name>
            <email>kolais@ebi.ac.uk</email>
            <roles>
                <role>Software Engineer</role>
            </roles>
        </developer>
        <developer>
            <id>ugis</id>
            <name>Ugis Sarkans</name>
            <email>ugis@ebi.ac.uk</email>
            <roles>
                <role>Team Leader</role>
            </roles>
        </developer>
    </developers>
    <build>
        <resources>
            <resource>
                <directory>resources</directory>
                <excludes>
                    <exclude>assets/**</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <finalName>${pom.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <webResources>
                         <resource>
                            <directory>${basedir}/src/main/webapp</directory>
                            <includes>
                                <include>*.html</include>
                                <include>WEB-INF/web.xml</include>
                                <include>WEB-INF/urlrewrite.xml</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.tuckey</groupId>
            <artifactId>urlrewritefilter</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
        </dependency>
    </dependencies>
</project>

