<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <index id="experiments" location="${sys:java.io.tmpdir}/index" defaultAnalyzer="uk.ac.ebi.arrayexpress.utils.search.LowercaseAnalyzer">
        <document path="/experiments/experiment">
            <field name="keywords" path="string-join(.//text(), ' ')" analyze="true" analyzer="uk.ac.ebi.arrayexpress.utils.search.ExperimentTextAnalyzer" store="false" />
            <field name="accession" path="accession | secondaryaccession" analyze="true" store="false" />
            <field name="species" path="species" analyze="true" store="false" />
            <field name="array" path="arraydesign/id | arraydesign/accession | arraydesign/name" analyze="true" store="false" />
            <field name="exptype" path="experimenttype" analyze="true" store="false" />
            <field name="expdesign" path="experimentdesign" analyze="true" store="false" />
            <field name="ef" path="experimentalfactor/name" analyze="true" store="false" />
            <field name="efcount" type="integer" path="count(distinct-values(experimentalfactor/name, 'http://saxon.sf.net/collation?ignore-case=yes'))" />
            <field name="efv" path="experimentalfactor/value" analyze="true" store="false" />
            <field name="sa" path="sampleattribute/value" analyze="true" store="false" />
            <field name="pmid" path="bibliography/accession" analyze="false" store="false" />
            <field name="userid" path="user" analyze="false" store="false" />
            <field name="gxa" path="@loadedinatlas" analyze="false" store="false" />
        </document>
    </index>
    <index id="protocols">
        <document path="/protocols/protocol">
            <field name="keywords" path="string-join(.//text(), ' ')" analyze="true" store="false" />
        </document>
    </index>
    <index id="arrays">
        <document path="/arrays/array">
            <field name="keywords" path="string-join(.//text(), ' ')" analyze="true" store="false" />
        </document>
    </index>
</configuration>